{{#partial "content"}}
    <div class="">

    <h1> Heroes</h1>
    {{#if heroes}}
        {{#each heroes}}
            <div class ="hero-list">
                <p>Hero Name:{{name}}</p>
                <p>Hero Age:<span>{{age}}</span></p>
                <p>Hero Cause:<span>{{special_power}}</span></p>
                <p>Hero Weakness:{{weakness}}</p>

                <a href="/squad-form">Add a squad to the Hero </a>
            </div>
        {{/each}}

    {{else}}
        <p> No Heroes yet!</p>
    {{/if}}
    </div>

{{/partial}}
{{>layout.hbs}}