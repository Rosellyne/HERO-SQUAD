{{#partial "content"}}

    <h1> Heroes</h1>
    {{#if heroes}}
        {{#each heroes}}
            <div class ="hero-list">
                <p>Hero Name:<span>{{name}}</span></p>
                <p>Hero Age:<span>{{age}}</span></p>
                <p>Hero Powers:<span>{{special_power}}</span></p>
                <p>Hero Weakness:<span>{{weakness}}</span></p>
                <div class="link">
                <a href="/squad-form">Add a squad to the Hero </a>
            </div>
        {{/each}}

    {{else}}
        <p> No Heroes yet!</p>
    {{/if}}
    </div>

{{/partial}}
{{>layout.hbs}}